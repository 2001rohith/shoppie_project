<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CREATE PRODUCT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
</head>
<body>
  <nav class="navbar navbar-light bg-light py-4">
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-4 text-start fw-bold">
          <span class="navbar-brand text-primary mb-0 h1">SHOPPIE-E ADMIN</span>
        </div>
        <div class="col-12 col-md-4 text-end">
        </div>
        <div class="col-12 col-md-4 text-center">
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8  ">
        <h3 class="text-center pt-2 " style="color: dodgerblue;">Add Product</h3>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-md-8">
        <div class="text-center pt-4" id="login">
          <% if (typeof message !== "undefined") { %>
            <h4 style="color: red;"><%= message %></h4>
          <% } %>
          <form action="/api/product/create-product" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <small class="form-text text-muted text-left">Title</small>
              <input type="text" name="title" class="form-control" placeholder="Enter Title" required>
              <div class="py-2">
                <select name="category" class="form-select">
                  <option value="" disabled selected>Select a category</option>
                  <% categories.forEach(category => { %>
                      <option value="<%= category._id %>"><%= category.name %></option>
                  <% }); %>
                </select>
              </div>
              <small class="form-text text-muted text-left">Brand</small>
              <input type="text" name="brand" class="form-control" placeholder="Enter Brand" required>

              <div class="input-group pt-2 py-2">
                <span class="input-group-text">Description...</span>
                <textarea class="form-control" name="description" aria-label="With textarea"></textarea>
                <input type="file" name="images" accept="image/*" multiple required>
              </div>
              
              <small class="form-text text-muted text-left">Price</small>
              <input type="number" name="price" class="form-control" placeholder="Enter Price" required>

              <small class="form-text text-muted text-left">Quantity</small>
              <input type="number" name="quantity" class="form-control" placeholder="Enter Quantity" required>

              <small class="form-text text-muted text-left">Color</small>
              <input type="text" name="color" class="form-control" placeholder="Enter Color" required>
              <br>
              <button type="submit" class="btn btn-primary">Add</button>
            </div>     
          </form>
          <br>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
