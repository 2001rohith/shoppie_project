<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>otp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<style>
  body{
    background-color: #343a40;
  }
</style>
<body>
  
  <div class="text-center" id="login">
    <div class="container w-25  py-5 border">
      <div class="title pb-5">
        <h2 class="font text-primary" >Verify</h2>
      </div>
<% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-info" role="alert">
    <%= message %>
  </div>
<% } %>

      <form action="/api/user/verify-otp" method="POST">
        <div class="form-group">
          <small class="form-text text-light text-left">OTP</small>
          <input type="text" name="otp" class="form-control" placeholder="Enter OTP" required>
          <input type="hidden" name="email" value="<%= email %>">
        </div>
        <br>
        <br>
        <button type="submit" class="btn btn-primary">Verify</button>
      </form>
      <br>

      <!-- Timer and Resend Button -->
      <div>
        <span id="timer">Time left: 60s</span>
        <button id="resend-button" class="btn btn-link" disabled>Resend OTP</button>
      </div>
    </div>
  </div>

  <script>
    const timerElement = document.getElementById('timer');
    const resendButton = document.getElementById('resend-button');
    let timeLeft = 60;

    function startTimer() {
      timerElement.innerText = `Time left: ${timeLeft}s`;

      const timerInterval = setInterval(() => {
        timeLeft -= 1;
        timerElement.innerText = `Time left: ${timeLeft}s`;

        if (timeLeft === 0) {
          clearInterval(timerInterval);
          resendButton.disabled = false;
          timerElement.innerText = 'OTP expired';
        }
      }, 1000);
    }

    resendButton.addEventListener('click', () => {
      // Add logic to trigger OTP resend API endpoint
      // You may want to make an AJAX request or redirect to the server route for OTP resend
      // For simplicity, I'm assuming that the server route for OTP resend is '/api/user/resend-otp'
      fetch('/api/user/resend-otp', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email: '<%= email %>' }),
      })
        .then((response) => response.json())
        .then((data) => {
          console.log(data);
          if (data.message.includes('sent')) {
            timeLeft = 60;
            resendButton.disabled = true;
            startTimer();
          }
        });
    });

    document.addEventListener('DOMContentLoaded', () => {
      startTimer();
    });
  </script>
</body>
</html>
