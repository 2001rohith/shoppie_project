  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400;0,600;0,700;1,500;1,600;1,700&family=Kanit:ital,wght@0,100;0,300;0,400;0,500;0,900;1,500&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Mooli&family=Poppins:wght@400;700&family=Roboto+Condensed&family=Roboto+Mono:wght@600&family=Roboto:wght@400;700&family=Skranji&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Nova+Square&display=swap');

    body {
      font-family: 'Cabin', sans-serif;
      background-color: #343a40;
    }

    .container {
      min-height: 700px;
      
    }
    .container-fluid{
        align-items: center;
      justify-content: center;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3 fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">SHOPPIE-E</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class=" collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto ">
          <li class="nav-item">
            <a class="nav-link mx-2 active" aria-current="page" href="/api/product/allproducts">PRODUCTS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link mx-2" href="/api/user/home">HOME</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto ">
          <li class="nav-item mx-2">

          </li>
          <li>
            <% if (user) { %>
              <h5 class="text-dark">
                <%= user.name %>
              </h5>
              <% } else { %>
                <p class="text-light">User not found</p>
                <% } %>

          </li>

        </ul>
      </div>
    </div>
  </nav>
  <!--nav ends-->
  <div class="container-fluid pt-5">
  <div class="container w-25 pt-5 text-center">
    <h3 class="text-primary">Change Password</h3>
    <%  if(typeof message !=="undefined"){
        %>
        <p style="color: green;"><%= message %>

        </p>
        <%
        }
        %>
        
        <form action="/api/user/change-password" method="POST">
            <div class="form-group">
                <small class="form-text text-light text-left">Password</small>
                <input type="text" name="newPassword" class="form-control" placeholder="Enter Password" required>

                <small class="form-text text-light text-left">Confirm Password</small>
                <input type="text" name="confirmPassword" class="form-control" placeholder="Confirm Password" required>
            <br>
            <button type="submit" class="btn btn-primary">DONE</button>
        </form>
  </div>
</div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Z4qH8dP1VAzCEz8bMztf3rw83S73e3Ux4qAQQyr8txI/FEU5ZWyKf6C+YPnRiNTl"
