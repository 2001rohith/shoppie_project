        body {
            background-color: #343a40;
           
        }

        .form-group {
            background-color: #262B2F;
            padding: 30px;
        }
        .form{
            margin-top: 30px;
            margin-left: 250px;
        }
        .btn{
            margin-left: 140px;
        }
        .sidebar{
            background-color: black;
        }
        .sidebar:hover{
            background-color: #191a1a;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid py-2">
            <span class="navbar-brand text-light h1 ps-3">SHOPPIE-E ADMIN</span>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-light pe-5" href="/admin/adminHome">HOME</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Navbar end -->

    <div class="container-fluid position-relative pt-5 text-light">
        <div class="row pt-5">
            <h3>Welcome Admin</h3>
        </div>
            <!-- Sidebar -->
            
        <div class="row pt-3 ">
            <div class="col-md-2 col-12">
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold " href="/admin/all-users"><i class="fa-solid fa-list"></i>
                        Users</a>
                </div>
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold " href="/product/getallproducts"><i
                            class="fa-solid fa-list"></i></i> Products</a>
                </div>
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold" href="/product/getallcategory"><i
                            class="fa-solid fa-list"></i> Category</a>
                </div>
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold" href="/admin/get-orders"><i
                            class="fa-solid fa-list"></i> Orders</a>
                </div>
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold" href="/admin/coupons"><i
                            class="fa-solid fa-right-long"></i> Coupons</a>
                </div>
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold" href="/admin/get-returns"><i
                            class="fa-solid fa-list"></i> Returns</a>
                </div>
                <div class="row px-5 py-3 border sidebar" style="border-color: black !important;">
                    <a class="navbar-brand text-light fs-6 fw-bold" href="/admin/dashboard"><i
                            class="fa-solid fa-list"></i> Statics</a>
                </div>
            </div>
            <!-- Sidebar end -->

            <!-- Main content area -->
            <div class="col-6 ">
                
                <h3 class="text-center mb-5" style="color: white;">Add Coupons</h3>
            
            
                <div class="form">
                    <form action="/admin/coupons/create" method="POST">
                        <div class="form-group ">
                            <label for="discountPercentage">Discount Percentage:</label>
                            <input type="number" name="discountPercentage" class="form-control" required>
                            <label for="minimumPurchase">Minimum purchase amount:</label>
                            <input type="number" name="minimumPurchase" class="form-control" required>
                            <label for="maxdiscount">Maximum discount:</label>
                            <input type="number" name="maxdiscount" class="form-control" required>
                            <label for="expirationDate">Expiration Date:</label>
                            <input type="date" name="expirationDate" class="form-control" required>
                            <button class="btn btn-dark mt-3" type="submit">Create Coupon</button>
                        </div>
                    </form>
                </div>
            
            </div>
            <!-- Main content area end -->
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
