<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UPDATE PRODUCT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-light bg-light row py-4">
        <div class="col-md-4 text-start px-md-5 fw-bold">
            <span class="navbar-brand text-primary mb-0 h1">SHOPPIE-E ADMIN</span>
        </div>
        <div class="col-md-4 text-end">
            <!-- You can add content or links here if needed -->
        </div>
        <div class="col-md-4 text-center">
            <!-- You can add content or links here if needed -->
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- Center the form on larger screens -->
                <h3 class="text-center pt-3" style="color: dodgerblue;">Update Product</h3>
                <div class="text-center" id="login">
                    <div class="container-fluid">
                        <% if (typeof message !== "undefined") { %>
                            <h4 style="color: red;"><%= message %></h4>
                        <% } %>

                        <form action="" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <small class="form-text text-muted text-left">Title</small>
                                <input type="text" name="title" class="form-control" placeholder="<%= product.title %>"
                                    value="<%= product.title %>"><br>

                                <select name="category" class="form-select py-2">
                                    <option value="" disabled selected>Category</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category._id %>"><%= category.name %></option>
                                    <% }); %>
                                </select><br>

                                <small class="form-text text-muted text-left">Brand</small>
                                <input type="text" name="brand" class="form-control"
                                    placeholder="<%= product.brand %>" value="<%= product.brand %>">

                                <div class="input-group pt-2">
                                    <span class="input-group-text">Description...</span>
                                    <textarea class="form-control" name="description"
                                        aria-label="With textarea"><%= product.description %></textarea>
                                </div>

                                <div class="form-group">
                                    <small class="form-text text-muted text-left">Images</small>
                                    <input type="file" name="images" class="form-control" multiple>
                                </div>

                                <small class="form-text text-muted text-left">Price</small>
                                <input type="number" name="price" class="form-control"
                                    placeholder="<%= product.price %>" value="<%= product.price %>">

                                <small class="form-text text-muted text-left">Quantity</small>
                                <input type="number" name="quantity" class="form-control"
                                    placeholder="<%= product.quantity %>" value="<%= product.quantity %>">

                                <small class="form-text text-muted text-left">Color</small>
                                <input type="text" name="color" class="form-control"
                                    placeholder="<%= product.color %>" value="<%= product.color %>">

                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary">Done</button>
                        </form>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
